<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.exttv">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="com.android.providers.tv.permission.READ_EPG_DATA" />
    <uses-permission android:name="com.android.providers.tv.permission.WRITE_EPG_DATA" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/icon_ch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name="com.android.exttv.MainActivity"
            android:usesCleartextTraffic="true"
            android:banner="@drawable/icon"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:logo="@drawable/icon"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.android.exttv.PlayerActivity"
            android:theme="@style/PlayerTheme" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- Accepts URIs that begin with "tvrecommendation://app". -->
                <data
                    android:host="@string/host"
                    android:scheme="@string/schema" />
            </intent-filter>
        </activity>

        <service
            android:usesCleartextTraffic="true"
            android:name=".SyncProgramsJobService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

    </application>
</manifest>